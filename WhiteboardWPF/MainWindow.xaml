<Window x:Class="WhiteboardWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhiteboardWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <InkCanvas x:Name="inkCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 0, 40" StrokeCollected="strokeCollected" MouseDown="clickCanvas"></InkCanvas>
        <StackPanel Orientation="Horizontal" HorizontalAlignment ="Stretch" VerticalAlignment="Bottom">
            <ComboBox x:Name="penStyleBox" HorizontalAlignment="Left" Width="100" Height="40" SelectionChanged="selectedPenStyle"/>
            <ComboBox x:Name="colorBox" HorizontalAlignment="Left"  Width="70" Height="40" SelectionChanged="selectedColor"/>
            <Button x:Name="clearAllButton" Content="Clear All" HorizontalAlignment="Right" Height="40" Width="80" Click="clearAll"/>
            <StackPanel>
                <Slider x:Name="widthSlider" Margin="5, 0, 5, 0" HorizontalAlignment="Left" Height="20" Orientation="Horizontal" Width="100" Minimum="1" Maximum="10" ValueChanged="sliderValueChanged"/>
                <TextBlock HorizontalAlignment="Center">Width</TextBlock>
            </StackPanel>
            <Button x:Name="textButton" Click="clickTextButton">TEXT</Button>
            <TextBlock x:Name="textBlock" Height="40" Width="200"/>
        </StackPanel>
    </Grid>
</Window>